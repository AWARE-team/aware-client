<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Aware" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="toolbarStyle">@style/Aware.Toolbar</item>
        <item name="windowActionBar">false</item>

        <item name="android:colorPrimary">#33B5E5</item>
        <item name="android:colorPrimaryDark">#33B5E5</item>
        <item name="android:textColor">#000000</item>
